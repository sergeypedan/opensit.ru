- if !@user.following_anyone?
	= render "shared/user_summary"
	.col-lg-9
		.message-box.no-follow
			h2 = t "me.empty_follow_list_header"
			= link_to t("me.explore_link"), "/explore"
			p = t "me.wall_help"

- else
	.sit-container
		= render "shared/user_summary"
		= render collection: @feed_items, partial: "sits/sit_teaser", as: :sit, locals: { width: 3 }

	.pagination-container = will_paginate @feed_items, renderer: BootstrapPagination::Rails
