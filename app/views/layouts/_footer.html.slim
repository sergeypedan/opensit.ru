footer.site-footer
  .container

    .col-md-3.hidden-xs
      h5 = t "footer.about"
      ul style='margin-bottom: 0'
        li = link_to t("footer.journal"),  about_journal_path
        li = link_to t("footer.about"),    about_path
        li = link_to t("footer.contacts"), contact_path

    .col-md-3.hidden-xs
      / h5 = t "footer.community"
      / ul
      /   li = link_to "Twitter",  "https://twitter.com/#{ENV["TWITTER_ID"]}"
      /   li = link_to "Facebook", "https://www.facebook.com/#{ENV["FACEBOOK_ID"]}"

    .col-md-3.hidden-xs
      / h5 = t "footer.contribute"
      / ul
      /   li = link_to t("footer.how_to_contribute"), "/contribute"
      /   li = link_to t("footer.github"), "http://github.com/#{ENV.fetch("GITHUB_ID")}"

    .col-md-3.copyright-holder
      = image_tag "logos/logo-3.png", class: "footer-logo"

      p.mobile-nav.hidden-sm-plus
        => link_to t("footer.about"), "/about"
        | •
        =<> link_to t("footer.contribute"), "/contribute"
        | •
        =< link_to t("footer.contacts"), "/contact"

      p.copyright
        | &copy; 2013–
        => Time.now.year
        = ENV.fetch("BRAND")
