<% if user_signed_in? %>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="nav-logo">
          <%= link_to root_path, class: "navbar-brand" do %>
            <%= image_tag 'logos/logomark_trans.png', class: 'nav-logomark' %>
            <span class="nav-logotype">opensit</span>
          <% end %>
        </div>
      </div>

      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li <%='class=active' if current_page? notifications_path %>>
              <%= link_to new_notifications(current_user), notifications_path, title: 'Notifications', class: 'nav-option' %>
            </li>

            <%= content_tag :li, class: ('active' if current_page? new_sit_path) do %>
              <%= link_to new_sit_path, title: t("menu.add_sit"), class: 'nav-option' do %>
                <%= fa_icon "plus" %>
                <span class="nav-button-text"><%= t("menu.add_sit") %></span>
              <% end %>
            <% end %>

            <%= content_tag :li, class: ('active' if current_page? user_path(current_user)) do %>
              <%= link_to user_path(current_user), title: t("menu.me"), class: 'nav-option' do %>
                <%= fa_icon "user" %>
                <span class="nav-button-text"><%= t("menu.me") %></span>
              <% end %>
            <% end %>

            <%= content_tag :li, class: ('active' if current_page? goals_path) do %>
              <%= link_to goals_path, title: t("menu.goals"), class: 'nav-option' do %>
                <%= fa_icon "bullseye" %>
                <span class="nav-button-text"><%= t("menu.goals") %></span>
              <% end %>
            <% end %>

            <%= content_tag :li, class: ('active' if current_page? explore_path) do %>
              <%= link_to explore_path, title: t("menu.explore"), class: 'nav-option' do %>
                <%= fa_icon "globe" %>
                <span class="nav-button-text"><%= t("menu.explore") %></span>
              <% end %>
            <% end %>
          <% else %>
            <% unless current_page? new_user_session_path %>
              <p class="navbar-text"><%= link_to t("authorization.sign_in"), "/users/sign_in", class: "btn btn-primary" %></p>
            <% end %>
          <% end %>
          <%= fa_icon "spinner spin", class: "loading-indicator" %>
        </ul>

        <div class="navbar-header navbar-right">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav">
              <li>
                <form class="navbar-form navbar-right" role="search" action="/search">
                  <div class="form-group search-box">
                    <input type="text" class="form-control" name="q" placeholder="Search">
                    <input type="hidden" name="type" value="sits">
                  </div>
                </form>
              </li>

              <%= content_tag :li, class: ("active" if current_page? messages_path) %>
                <%= link_to messages_path, class: "pull-left", title: 'Inbox', class: "nav-option" do %>
                  <%= fa_icon "envelope" %>
                  <span class="unread-count"><%= current_user.unread_count %></span>
                <% end %>
              </li>

              <li class="dropdown">
                <%= link_to "#", class: "dropdown-toggle", data: { toggle: :dropdown } do %>
                  <%= small_avatar_of(current_user, 'nav') %>
                  <b class="caret"></b>
                <% end %>
                <ul class="dropdown-menu">
                  <li><%= link_to fa_icon("user", text: t("menu.profile")), edit_user_registration_path %></li>
                  <li><%= link_to fa_icon("sign-out", text: t("menu.logout")), destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          <% end %>
        </div>
      </div>

    </div> <!-- end .container -->
  </nav>
<% elsif !controller_name.in? ['registrations', 'sessions'] %>
  <%= render "layouts/header_visitor" %>
<% end %>
