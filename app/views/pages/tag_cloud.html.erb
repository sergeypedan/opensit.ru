<div class="sidebar col-xs-12 col-lg-3">
  <%= render 'explore_tile' %>
</div>

<div class="clearfix col-xs-12 col-lg-9">
  <div id="tag_cloud">
    <% tag_cloud Sit.tag_counts, %w[s m l] do |tag, css_class| %>
      <%= link_to tag.name, tag_path(tag.name), class: css_class %>
    <% end %>
  </div>
</div>