<div class="tile stamp col-md-3 header-tile">
  <div class="content">
    <h2>Explore!</h2>

    <ul class="nav nav-pills nav-stacked">
      <li class="list-title">Sits</li>
      <li <%='class=active' if current_page?(explore_path) %>><a href="/explore" class="item"><i class="fa fa-globe"></i> Global SitStream</a></li>
      <li <%='class=active' if current_page?(explore_comments_path) %>><a href="/explore/comments" class="item"><i class="fa fa-comments"></i> Latest discussions</a></li>
      <li <%='class=active' if current_page?(explore_tags_path) %>><a href="/explore/tags" class="item"><i class="fa fa-tags"></i> Popular tags</a></li>
      <li class="list-title">Users</li>
      <li <%='class=active' if current_page?(explore_active_users_path) %>><a href="/explore/users/active" class="item"><i class="fa fa-user"></i> Active users</a></li>
      <li <%='class=active' if current_page?(explore_new_users_path) %>><a href="/explore/users/new" class="item"><i class="fa fa-user"></i> New users</a></li>
      <li <%='class=active' if current_page?(explore_new_sitters_path) %>><a title="New users who have started adding sits" href="/explore/users/new/sitters" class="item"><i class="fa fa-user"></i> New sitters</a></li>
    </ul>

    <% if user_signed_in? %>
      <% if @suggested_users && !@suggested_users.empty? %>
        <%= render 'shared/suggested_users_block', users: @suggested_users %>
      <% end %>
    <% end %>
  </div>
</div>