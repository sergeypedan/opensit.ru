<% if @listed.last != sit.created_at.to_date %>
  <hr>
  <div class="day-of-the-month"><div class="weekday"><%= l(sit.created_at, format: '%a') %></div><div class="date"><%=sit.created_at.strftime("%d")%></div></div>
<% end %>

<% @listed.push(sit.created_at.to_date) %>

<div class="entry">
  <% if sit.is_meditation? %>
  	<% if sit.stub? %>
    	<div class="link"><i class='fa fa-clock-o'></i> <%=sit.duration%></div>
    <% else %>
    	<div class="link"><%= link_to "<i class='fa fa-clock-o'></i> #{sit.duration}".html_safe, sit_path(sit) %></div>
    <% end %>
    <div class="teaser"><%= sit.body.empty? ? '&nbsp;'.html_safe : teaser(sit, 150)%></div> <br>
  <% else %>
    <div class="link"><%= link_to "<i class='fa fa-book'></i>".html_safe, sit_path(sit) %></div>
    <div class="teaser"><em><%= sit.title %></em>: <%= teaser(sit, 140)%></div> <br>
  <% end %>
  <% if is_current_user %>
    <div class="col-xs-10">
    <% if sit.public_visibility? %>
      <%= social_share_button_tag(sit.body, allow_sites: %w[twitter facebook vkontakte]) %>
    <% end %>
    </div>
    <div class="col-xs-2 text-right">
      <i class='fa fa-trash fa-lg sit-delete-icon' data-id="<%= sit.id %>" data-confirm-message="<%= t('sit.are_you_sure_delete') %>"></i>
    </div>
  <% end %>
</div>
